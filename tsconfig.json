{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}

{
  "name": "wokwi-cli",
  "version": "0.6.7",
  "description": "Wokwi Simulator CLI (for CI and local development)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "node tools/build.js",
    "package": "npm run build && pkg --public -o dist/bin/wokwi-cli -t node18-linuxstatic-arm64,node18-linuxstatic-x64,node18-macos-arm64,node18-macos-x64,node18-win-x64 dist/cli.cjs",
    "start": "ts-node --esm src/main.ts",
    "lint": "eslint ./src",
    "test": "npm run lint && vitest --run",
    "test:watch": "vitest --watch",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Uri Shaked",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/wokwi/wokwi-cli"
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "arg": "^5.0.2",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "esbuild": "^0.18.17",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint"
    ]
  }
}
